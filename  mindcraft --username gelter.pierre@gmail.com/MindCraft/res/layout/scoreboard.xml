<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  				xmlns:android="http://schemas.android.com/apk/res/android"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@drawable/background"
  				android:id="@+id/newGameLayout">
  				
<!-- The scoreboard shows the 5 best players by score. On the left is their name
from first to fifth. On the right is their score in the same order. -->

			<!-- Scoreboard logo -->
   		  <ImageView android:layout_width="wrap_content"
        	     	 android:id="@+id/ScoreboardView" 
        	     	 android:layout_height="wrap_content" 
        	     	 android:src="@drawable/scoreboard"
        	     	 android:layout_marginTop="10dip" 
        	     	 android:layout_centerHorizontal="true">
          </ImageView>
          
          <!-- 1st players name -->
   		  <TextView android:text="TextView"
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/firstName" 
   		  			android:layout_below="@+id/ScoreboardView"
   		  			android:layout_marginTop="10dip" 
   		  			android:layout_alignLeft="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 1st players score -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/firstScore" 
   		  			android:layout_below="@+id/ScoreboardView"
   		  			android:layout_marginTop="10dip" 
   		  			android:layout_alignRight="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 2nd players name -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/secondName" 
   		  			android:layout_below="@+id/firstName" 
   		  			android:layout_alignLeft="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 2nd players score -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/secondScore" 
   		  			android:layout_below="@+id/firstName" 
   		  			android:layout_alignRight="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 3rd players name -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/thirdName" 
   		  			android:layout_below="@+id/secondName" 
   		  			android:layout_alignLeft="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 3rd players score -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/thirdScore" 
   		  			android:layout_below="@+id/secondName" 
   		  			android:layout_alignRight="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 4th players name -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/fourthName" 
   		  			android:layout_below="@+id/thirdName" 
   		  			android:layout_alignLeft="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 4th players score -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/fourthScore" 
   		  			android:layout_below="@+id/thirdName" 
   		  			android:layout_alignRight="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 5th players name -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/fifthName" 
   		  			android:layout_below="@+id/fourthName" 
   		  			android:layout_alignLeft="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  <!-- 5th players score -->
   		  <TextView android:text="TextView" 
   		  			android:layout_width="wrap_content" 
   		  			android:layout_height="wrap_content" 
   		  			android:id="@+id/fifthScore" 
   		  			android:layout_below="@+id/fourthName" 
   		  			android:layout_alignRight="@+id/ScoreboardView">
   		  </TextView>
   		  
   		  
   		  <ImageButton android:layout_width="wrap_content"
        	     	 android:id="@+id/returnToMainButton" 
        	     	 android:layout_height="wrap_content" 
        	     	 android:src="@drawable/backselector"
        	     	 android:layout_marginBottom="10dip"
        	     	 android:layout_alignParentRight="true"
        	     	 android:layout_alignParentBottom="true"
        	     	 android:background="@android:color/transparent">
          </ImageButton> 
</RelativeLayout>