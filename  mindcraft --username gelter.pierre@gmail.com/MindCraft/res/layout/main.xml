<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout android:id="@+id/mainLayout" 
       				android:layout_width="fill_parent"
    				android:layout_height="fill_parent"
    				xmlns:android="http://schemas.android.com/apk/res/android"
    				android:background="@drawable/background">
    	
<!--   Logo and buttons in main menu are defined below. -->

			<!-- MindCraft banner -->
          <ImageView android:layout_width="wrap_content"
        	     	 android:id="@+id/logoView" 
        	     	 android:layout_height="wrap_content" 
        	     	 android:src="@drawable/logo"
        	     	 android:layout_marginTop="10dip" 
        	     	 android:layout_centerHorizontal="true">
          </ImageView>
          
          <!-- New game button -->
        <ImageButton android:layout_width="wrap_content" 
        			 android:layout_height="wrap_content" 
        			 android:src="@drawable/newgameselector" 
        			 android:id="@+id/newGameButton"
        			 android:layout_centerHorizontal="true"
        			 android:layout_below="@id/logoView"
        			 android:layout_marginTop="20dip"
        			 android:background="@android:color/transparent">
        </ImageButton>
        
        <!-- Load game button -->
        <ImageButton android:layout_width="wrap_content" 
        			 android:layout_height="wrap_content" 
        			 android:src="@drawable/loadgameselector" 
        			 android:id="@+id/loadGameButton" 
        			 android:layout_centerHorizontal="true"
        			 android:layout_below="@id/newGameButton"
        			 android:layout_marginTop="20dip"
        			 android:background="@android:color/transparent">
        </ImageButton>
        
        <!-- Highscore button -->
        <ImageButton android:layout_width="wrap_content" 
        			 android:layout_height="wrap_content"
        			 android:src="@drawable/highscoresselector" 
        			 android:id="@+id/highScoresButton" 
        			 android:layout_centerHorizontal="true"
        			 android:layout_below="@id/loadGameButton"
        			 android:layout_marginTop="20dip"
        			 android:background="@android:color/transparent">
        </ImageButton>
        
        <!-- Options button -->
        <ImageButton android:layout_width="wrap_content"
        			 android:layout_height="wrap_content" 
        			 android:src="@drawable/optionsselector" 
        			 android:id="@+id/optionsButton" 
        			 android:layout_centerHorizontal="true"
        			 android:layout_below="@id/highScoresButton"
        			 android:layout_marginTop="20dip"
        			 android:background="@android:color/transparent">
        </ImageButton>
        
        <!-- About button -->
        <ImageButton android:layout_width="wrap_content" 
        			 android:layout_height="wrap_content" 
        			 android:src="@drawable/aboutselector" 
        			 android:id="@+id/aboutButton" 
        			 android:layout_centerHorizontal="true"
        			 android:layout_below="@id/optionsButton"
        			 android:layout_marginTop="20dip"
        			 android:background="@android:color/transparent">
        </ImageButton>      
    </RelativeLayout>


