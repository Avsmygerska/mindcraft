<?xml version="1.0" encoding="utf-8"?>
<!-- The image changes to a glowing image, helping to undestand that the button was pressed. -->
 <selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_pressed="true"
           android:drawable="@drawable/easy_glow" /> <!-- pressed -->
     <item android:state_focused="true"
           android:drawable="@drawable/easy" /> <!-- focused -->
     <item android:drawable="@drawable/easy" /> <!-- default -->
 </selector>
